<div class="row">   
   <div class="col-lg-12">
   <div class="ibox float-e-margins">
              <div class="ibox-title">
                  <h2 class="parametros-titulo"><%= "Cambiar clave" %></h2>
              </div>
          </div>
          <div class="ibox-content">
             <%= form_for @usuario,  :url => '/usuarios/cambiar_clave', method: "post",:html => {:class => 'form-horizontal'} do |f| %>
                  <% if @usuario.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= pluralize(@usuario.errors.count, "error") %> prohibited this parametro from being saved:</h2>

                      <ul>
                      <% @usuario.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                      </ul>
                    </div>
                  <% end %>
                  <div class="row form-group">
                            <label class="col-lg-2 control-label">Correo</label>

                              <div class="col-lg-10">  <%= f.email_field :email, autofocus: true, placeholder: "usuario@correo.com", class: "form-control", :readonly => true %>
                              </div>
                            </div>
                  

                 <div class="m-t" >
                   <div class="row">
                      <div class="col-md-6">
                        <div class="row form-group"><label class="col-lg-2 control-label">Contrase単a nueva</label>

                                <div class="col-lg-10">        
                                <%= f.password_field :password, autocomplete: "off", placeholder: "Ingrese su contrase単a", class: "form-control" %>
                                </div>
                            </div> 
                      </div>
                     <div class="col-md-6"> 
                                       
                            <div class="row form-group"><label class="col-lg-2 control-label">Confirmar Contrase単a</label>

                                <div class="col-lg-10">        
                                                 <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirme su contrase単a", class: "form-control" %>
                                </div>
                            </div>         
                      </div>
                   </div>
                  
                   <div class="row">
                    <div class="form-group">
                     <br>
                          <div class="col-lg-offset-3 col-lg-2">
                               <%= f.submit "Guardar", :class => "btn btn-sm  btn-primary" %>
                          </div>
                            <div class="col-lg-2">
                            <%= link_to 'Limpiar', '', type: :reset, :class => "btn btn-sm btn-warning " %>                          
                            </div>
                          <div class="col-lg-2">
                          <%= link_to 'Atras',"/perfil", :class => "btn btn-sm btn-success" %>                          
                          </div>
                      </div>
                    </div>
                  </div>
              
                  
                 

              <% end %>
  </div>
</div>
</div>
