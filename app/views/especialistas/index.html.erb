<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
      <h2 class="text-dark-blue"><strong><%= @especialistas.new.class.titulo %></strong></h2>
      <ol class="breadcrumb">
        <li>
          <a href="<%= url_for :controller => 'home', :action => 'index' %>">Inicio</a>
        </li>
        <li class="active">
            <strong class="text-blue">Listado</strong>
        </li>
    </ol>
  </div>
</div>
<div class="wrapper wrapper-content">
  <div class="row">
    <div class="col-sm-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h4 class="text-dark-blue"><strong>Listado: <%= @especialistas.new.class.titulo %></strong></h4>
        </div>
        <div class="ibox-content">
          <%= link_to "Registrar", new_especialista_path, :class => "btn btn-primary btn-sm", style: 'position: absolute; z-index: 9999; margin-top: 10px;'%> 
          <table class="footable table table-stripped" data-sorting="true" data-filtering="true">
              <thead>
                <tr>

                  <th data-sorted="true">Especialidad</th>
                  <th>Nombre y Apellido</th>
                  <th colspan="1"></th>
                </tr>
              </thead>
              <tbody>
                <% @especialistas.each do |especialista| %>
                    <tr>
                      <td><%= especialista.especialidadesDescripcion%></td>
                      <td><%= link_to especialista.persona.nombre, edit_especialista_path(especialista) %> <%= link_to especialista.persona.apellido, edit_especialista_path(especialista) %></td>
                      <td>
                        <%= link_to 'Editar', edit_especialista_path(especialista), :class => "btn btn-warning btn-sm " %>
                        <%= link_to 'Eliminar', especialista, :method => :delete, data: { confirm: '¿Está seguro que desea eliminar el especialista?' } , :class => "btn btn-danger btn-sm" %></td>
                    </tr>
                <% end %>
              </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>


