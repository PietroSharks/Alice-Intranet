<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <div class="ibox-content">
      <%= form_for @especialista, :html => {:class => 'form-horizontal'} do |f| %>
          <% if @especialista.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@especialista.errors.count, "error") %> prohibited this parametro from being
                  saved:</h2>

                <ul>
                  <% @especialista.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>

          <div class="field form-group">
            <label class="col-lg-2 control-label">Especialidad</label>
            <div class="col-lg-10"><%= f.collection_select(:especialidad_id, @especialidades, :id, :descripcion, {}, :class => "form-control") %></div>
          </div>

          <div class="field form-group">
            <label class="col-lg-2 control-label">Universidad</label>
            <div class="col-lg-10"><%= f.collection_select(:universidad_id, @universidades, :id, :descripcion, {}, :class => "form-control") %></div>
          </div>

          <div class="field form-group">
            <label class="col-lg-2 control-label">Formacion Academica</label>
            <div class="col-lg-10"><%= f.collection_select(:formacion_academica_id, @formacion_academicas, :id, :descripcion, {}, :class => "form-control") %></div>
          </div>

          <%= render 'personas/datos_persona', persona: @persona %>

          <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
              <%= f.submit 'Guardar', :class => "btn btn-sm btn-white" %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>


