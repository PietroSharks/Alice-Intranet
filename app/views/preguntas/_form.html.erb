<div class="row">   
   <div class="col-lg-6 col-lg-offset-3">
          <div class="ibox-content">
          <%= form_for(pregunta) do |f| %>
            <% if pregunta.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(pregunta.errors.count, "error") %> prohibited this pregunta from being saved:</h2>

                <ul>
                <% pregunta.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>

                 <div class="field form-group">
                    <label class="col-lg-2 control-label">Tipo pregunta</label>
                    <%= f.collection_select(:tipo_pregunta_id, @tipoPreguntas, :id, :descripcion) %>
                  </div>
                  <div class="form-group"><label class="col-lg-2 control-label">Titulo</label>

                      <div class="col-lg-10"><%= f.text_field :titulo, :class => "form-control" %>
                       </div>
                    </div>
                    <div class="form-group"><label class="col-lg-2 control-label">Descripcion</label>

                      <div class="col-lg-10"><%= f.text_field :descripcion, :class => "form-control" %>
                       </div>
                    </div>
                     <div class="form-group"><label class="col-lg-2 control-label">Respuesta</label>

                      <div class="col-lg-10"><%= f.text_field :respuesta, :class => "form-control" %>
                       </div>
                    </div>
                  <div class="form-group">
                      <div class="col-lg-offset-2 col-lg-10">
                          <%= f.submit 'Guardar', :class => "btn btn-sm btn-white" %>
                         
                      </div>
                  </div>
  <% end %>
    </div>
  </div>
</div>
