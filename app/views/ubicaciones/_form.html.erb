<div class="row">   
   <div class="col-lg-6 col-lg-offset-3">
          <div class="ibox float-e-margins">
             <div class="ibox-title">
                  <h2 class="parametros-titulo"><%= "Ubicación" %></h2>
              </div>
          </div>
          <div class="ibox-content">
             <%= form_for @parametro, :html => {:class => 'form-horizontal'} do |f| %>
                 
                 <div class="form-group"><label class="col-lg-2 control-label">Ciudad</label>
                    <div class="col-lg-10">
                      <%= f.collection_select :ciudad_id, Ciudad.all, :id, :descripcion, {prompt: "Seleccione"}, {class: "form-control"} %>
                     </div>
                  </div>
                  
                  <div class="form-group"><label class="col-lg-2 control-label">Sector</label>
                    <div class="col-lg-10">
                      <%= f.collection_select :sector_id, Sector.all, :id, :descripcion, {prompt: "Seleccione", :selected => @parametro.sector_id}, {class: "form-control"} %>
                     </div>
                  </div>
                  
                  <div class="form-group"><label class="col-lg-2 control-label">Tipo de ubicación</label>
                    <div class="col-lg-10">                        
                      <%= f.collection_select :tipo_ubicacion_id, TipoUbicacion.all, :id, :descripcion, {prompt: "Seleccione"}, {class: "form-control"} %>
                     </div>
                  </div>                    

                  <div class="form-group"><label class="col-lg-2 control-label">Descripción</label>
                      <div class="col-lg-10"><%= f.text_field :descripcion , :class => "form-control", :required => true %>
                      </div>
                  </div>
                  
                  <div class="form-group">
                      <div class="col-lg-offset-3 col-lg-2">
                           <%= f.submit "Guardar", :class => "btn  btn-sm btn-primary" %>
                      </div>
                        <div class="col-lg-2">
                        <%= link_to 'Limpiar', '', type: :reset, :class => "btn btn-sm btn-warning " %>                          
                        </div>
                      <div class="col-lg-2">
                      <%= link_to 'Atras',ubicaciones_path, :class => "btn btn-sm btn-success" %>                          
                      </div>
                  </div>

                 
              <% end %>
          </div>
  </div>
</div>