
<h1>Tipo Preguntas</h1>

<table>
  <thead>
    <tr>
      <th>Descripcion</th>
      <th>Estatus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_preguntas.each do |tipo_pregunta| %>
      <tr>
        <td><%= tipo_pregunta.descripcion %></td>
        <td><%= tipo_pregunta.estatus %></td>
        <td><%= link_to 'Show', tipo_pregunta %></td>
        <td><%= link_to 'Edit', edit_tipo_pregunta_path(tipo_pregunta) %></td>
        <td><%= link_to 'Destroy', tipo_pregunta, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

