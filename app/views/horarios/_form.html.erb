<div class="row">   
   <div class="col-lg-6 col-lg-offset-3">
    <div class="ibox float-e-margins">
              <div class="ibox-title">
                  <h5>Horario</h5>
              </div>
          </div>
          <div class="ibox-content">
             <%= form_for @horario , :html => {:class => 'form-horizontal'} do |f| %>
                  <% if @horario.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= pluralize(@horario.errors.count, "error") %> prohibited this parametro from being saved:</h2>

                      <ul>
                      <% @horario.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                      </ul>
                    </div>
                  <% end %>
                    <div class="field form-group"><label class="col-lg-2 control-label">Servicio</label>
                    <div class="col-lg-10"><%= f.collection_select(@referenciaServ, @collectionServ, :id, :descripcion,{}, :class =>"form-control") %></div>
                  </div>
                      <div class="field form-group"><label class="col-lg-2 control-label">Tipo Horario</label>
                    <div class="col-lg-10"><%= f.collection_select(@referencia, @collection, :id, :descripcion,{}, :class =>"form-control") %></div>
                  </div>
                 
                        <div class="form-group"><label class="col-lg-2 control-label">Tiempo Cita</label>

                      <div class="col-lg-10"><%= f.text_field :tiempo_cita, :class => "form-control" %>
                      </div>
                  </div>
                
                    <div class="form-group">                    
                      <div class="col-lg-offset-2 col-lg-10">
                          <%= f.submit 'Guardar', :class => "btn btn-sm btn-primary " %>
                          <%= button_tag "Limpiar", type: :reset , :class => "btn btn-sm btn-white fa fa-paint-brush"%>
                          <%= link_to 'Atras', @horario.class, :class => "btn btn-sm btn-white " %>
                      </div>
 </div>
              <% end %>
          </div>
  </div>
</div>
