<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
      <h2 class="text-dark-blue"><strong><%= @horario.class.titulo %></strong></h2>
      <ol class="breadcrumb">
        <li>
          <a href="<%= url_for :controller => 'home', :action => 'index' %>">Inicio</a>
        </li>
        <li>
          <% if @horario.new_record?  %>
            <%= link_to "Listado", horarios_path %>
          <% else %>
            <%= link_to "Mi Horario", @horario %>
          <% end %>
        </li>
        <li class="active">
          <% if @horario.new_record? %>
            <strong class="text-blue">Registrar <%= @horario.class.titulo %></strong>
          <% else %>
            <strong class="text-blue">Editar <%= @horario.class.titulo %></strong>
          <% end %>
        </li>
    </ol>
  </div>
</div>
<div class="wrapper wrapper-content">
  <div class="row">   
    <div class="col-sm-2"></div>
    <div class="col-sm-8">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h4 class="text-dark-blue"><strong><%= @horario.class.titulo %></strong></h4>
        </div>
        <div class="ibox-content">
          <div class="row">
            <div class="col-sm-12">
              <%= form_for @horario, :html => {:id => 'form-horario'}, :form_to_validate => @horario.class, role: 'form' do |f| %>
                <div class="form-group">
                  <label class="control-label">Servicio</label>
                  
                    <%= f.collection_select(@referenciaServ, @collectionServ, :id, :descripcion,{}, :class =>"form-control",:disabled=>true) %>
                </div>
                <div class="form-group">
                  <label class="control-label">Tipo de Horario</label>
                  <%= f.collection_select(@referencia, @collection, :id, :descripcion,{}, :class =>"form-control") %>
                </div>

                <% if @horario.tipo_horario_id==2%>
                  <div class="form-group">
                    <label class="col-lg-2 control-label">Tiempo Cita(Minutos)</label>
                    <%= f.number_field :tiempo_cita, :class => "form-control" %>
                  </div>
                <% else %>
                    <div class="form-group" style="display: none;">
                      <label class="control-label">Tiempo Cita(Minutos)</label>
                      <%= f.number_field :tiempo_cita, :class => "form-control" %>
                    </div>
                <% end %>

                  <div class="form-group">
                    <div class="col-lg-offset-3 col-lg-2">
                      <%= f.submit "Guardar", :class => "btn btn-sm btn-primary" %>
                    </div>
                    <div class="col-lg-2">
                      <%= link_to 'Atras',@horario, :class => "btn btn-sm btn-success" %>
                    </div>
                  </div>
              <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


