<div class="row">   
   <div class="col-lg-6 col-lg-offset-3">
      <div class="ibox float-e-margins">
          <div class="ibox-title">
              <h2 class="parametros-titulo"><%= @evaluacion.class.titulo %></h2>
          </div>
      </div>
      <div class="ibox-content">
         <%= form_for @evaluacion, :html => {:class => 'form-horizontal'} do |f| %>
              <% if @evaluacion.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@evaluacion.errors.count, "error") %> prohibited this evaluacion from being saved:</h2>
                  <ul>
                  <% @evaluacion.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>

              <%= hidden_field_tag :cita, @cita.id %>
              

                            
              <div class="col-lg-12" style="padding-bottom: 10px">
              <% @evaluacion.calificaciones.each do |cal| %>
                  <%= f.fields_for :calificaciones, cal  do |calificaciones_form| %>
                      
                    <div class="col-lg-12">
                      <%= calificaciones_form.label :criterio_id, Criterio.find(cal.criterio_id).descripcion %>
                      </div>
                      <div class="col-lg-12">
                        <%= calificaciones_form.hidden_field :id %>
                        <%= calificaciones_form.hidden_field :criterio_id %>
                        <%= calificaciones_form.hidden_field :tipo_calificacion_id %><div class="col-lg-3" style="margin-top: 10px;">                   
                          Calificacion:
                      </div>
                      <div class="col-lg-9">
                      <!--<input type="radio" name="prueba" onclick="calificar(2);" />-->
                        <fieldset class="rating">
                          <%= calificaciones_form.radio_button(:descripcion, "5", {:id => "radio5", :onclick => 'calificar(5);'}) %>
                          <label title="Muy bueno">5 stars</label>

                          <%= calificaciones_form.radio_button(:descripcion, "4") %>
                          <label title="Bueno">4 stars</label>

                          <%= calificaciones_form.radio_button(:descripcion, "3", :checked => true) %>
                          <label title="Normal">3 stars</label>

                          <%= calificaciones_form.radio_button(:descripcion, "2") %>
                          <label title="Mal">2 stars</label>

                          <%= calificaciones_form.radio_button(:descripcion, "1") %>
                          <label title="Muy mal">1 stars</label>
                      </fieldset>

                    </div>
                    <style type="text/css">
                      .rating{float:left}.rating:not(:checked) > input{position:absolute;top:-9999px;clip:rect(0,0,0,0)}.rating:not(:checked) > label{float:right;width:1.2em;padding:0 .1em;overflow:hidden;white-space:nowrap;cursor:pointer;font-size:200%;line-height:1.2;color:#ddd;text-shadow:1px 1px #bbb, 2px 2px #666, .1em .1em .2em rgba(0,0,0,.5)}.rating:not(:checked) > label:before{content:'â˜… '}.rating > input:checked ~ label{color:#f70;text-shadow:1px 1px #c60, 2px 2px #940, .1em .1em .2em rgba(0,0,0,.5)}.rating:not(:checked) > label:hover,.rating:not(:checked) > label:hover ~ label{color:gold;text-shadow:1px 1px goldenrod, 2px 2px #B57340, .1em .1em .2em rgba(0,0,0,.5)}.rating > input:checked + label:hover,.rating > input:checked + label:hover ~ label,.rating > input:checked ~ label:hover,.rating > input:checked ~ label:hover ~ label,.rating > label:hover ~ input:checked ~ label{color:#ea0;text-shadow:1px 1px goldenrod, 2px 2px #B57340, .1em .1em .2em rgba(0,0,0,.5)}.rating > label:active{position:relative;top:2px;left:2px}
                    </style>
                    <script type="text/javascript">
                      function calificar(i) {
                        var array = [1, 2, 3, 4, 5];
                        for (var j in array) { 
                          alert(array[j]);
                          if (i === array[j]) {
                            alert("radio" + i);
                            document.getElementById("radio" + i).checked = true;
                          } else {
                            alert('falso');
                            alert("radio" + i);
                            document.getElementById("radio" + i).checked = true;
                            document.getElementById("radio1").checked = false;
                            document.getElementById("radio3").checked = false;
                            document.getElementById("radio4").checked = false;
                            document.getElementById("radio5").checked = false;
                          }
                        }
                      }
                    </script>
                    </div>

                  <% end %>
                <% end %>
              </div>              
              


               <div class="form-group">
                      <div class="col-lg-offset-3 col-lg-2">
                          <%= f.submit "Guardar", :class => "btn btn-sm btn-primary" %>
                      </div>
                      <% if (@evaluacion.new_record?) %>
                        <div class="col-lg-2">
                        <%= link_to 'Limpiar', '', type: :reset, :class => "btn btn-sm btn-warning" %>                          
                        </div>
                        <% end %>
                      <div class="col-lg-2">
                      <%= link_to 'Atras', polymorphic_url(@evaluacion.class), :class => "btn btn-sm btn-success " %>                          
                      </div>
                  </div>
          <% end %>
      </div>
  </div>
</div>