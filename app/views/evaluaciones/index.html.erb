<%= csrf_meta_tag %>
<br>
<div class="ibox float-e-margins">
    <div class="ibox-title">
        <h2 class="parametros-titulo"><%= @parametros.new.class.titulo %></h2>
    </div>
</div>
<div class="ibox-content">

 <br><br> 
 <table class="footable table table-stripped" data-sorting="true" data-filtering="true">
    <thead>
      <tr>
        <th data-breakpoints="xs" data-sorted="true">Cita #</th>
        <th>Fecha</th>
        <th>Paciente</th>
        <th colspan="1"></th>
      </tr>
    </thead>
    <tbody>
      <% @parametros.each do |parametro| %>
          <tr>
          <td><%= parametro.id %></td>
            <td><%= parametro.fecha.strftime("%d/%m/%Y %H:%M %p") %></td>
            <td><%= link_to parametro.persona.nombre + ' ' + parametro.persona.apellido, edit_polymorphic_url(parametro) %></td>
            <td>
              <%= link_to 'Evaluar',  'evaluar_cita/'+parametro.id.to_s, :class => "btn btn-success btn-sm" %>
            </td>
          </tr>
      <% end %>
    </tbody>
      <tfoot>
        <tr>
            <td colspan="5">
                <ul class="pagination pull-right"></ul>
            </td>
        </tr>
      </tfoot>
  </table>
</div>
<br>
<script type="text/javascript">
  $(document).ready(function(){
    $('.table').footable();
  });

</script>


