
<h1>Tipo Busquedas</h1>

<table>
  <thead>
    <tr>
      <th>Descripcion</th>
      <th>Estatus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_busquedas.each do |tipo_busqueda| %>
      <tr>
        <td><%= tipo_busqueda.descripcion %></td>
        <td><%= tipo_busqueda.estatus %></td>
        <td><%= link_to 'Show', tipo_busqueda %></td>
        <td><%= link_to 'Edit', edit_tipo_busqueda_path(tipo_busqueda) %></td>
        <td><%= link_to 'Destroy', tipo_busqueda, method: :delete, data: { confirm: '¿Está seguro que desea eliminar el tipo de busqueda?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tipo Busqueda', new_tipo_busqueda_path %>
