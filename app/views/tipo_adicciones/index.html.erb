
<h1>Tipo Adicciones</h1>

<table>
  <thead>
    <tr>
      <th>Descripcion</th>
      <th>Estatus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_adicciones.each do |tipo_adiccion| %>
      <tr>
        <td><%= tipo_adiccion.descripcion %></td>
        <td><%= tipo_adiccion.estatus %></td>
        <td><%= link_to 'Show', tipo_adiccion %></td>
        <td><%= link_to 'Edit', edit_tipo_adiccion_path(tipo_adiccion) %></td>
        <td><%= link_to 'Destroy', tipo_adiccion, method: :delete, data: { confirm: '¿Está seguro que desea eliminar el tipo de adiccion?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tipo Adiccion', new_tipo_adiccion_path %>
