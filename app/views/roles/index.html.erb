<%= csrf_meta_tag %>
<p id="notice"><%= notice %></p>
<div class="ibox float-e-margins">
              <div class="ibox-title">
                  <h2 class="parametros-titulo"><%= "Roles" %></h2>
              </div>
          </div>
<div class="ibox-content">
<%= link_to 'Registrar', new_rol_path, :class => "btn btn-primary btn-sm" %>
 <br><br> 

 <table class="footable table table-stripped" data-sorting="true" data-filtering="true">
    <thead>
      <tr>
        <th data-breakpoints="xs">Descripción</th>
        <th colspan="1"></th>
      </tr>
    </thead>
    <tbody>
       <% @roles.each do |rol| %>
          <tr>
           <td><%= rol.descripcion %></td>
            <td>  <%= link_to 'Editar', edit_rol_path(rol), :class => "btn btn-warning btn-sm " %>
              <%= link_to 'Eliminar', rol, :method => :delete, data: { confirm: '¿Estás seguro?' } , :class => "btn btn-danger btn-sm " %></td>
          </tr>
      <% end %>
    </tbody>
      <tfoot>
        <tr>
            <td colspan="5">
                <ul class="pagination pull-right"></ul>
            </td>
        </tr>
      </tfoot>
  </table>
</div>
<br>


<script type="text/javascript">
$(document).ready(function(){
$('.table').footable();
});

</script>
