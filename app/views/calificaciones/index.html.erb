<p id="notice"><%= notice %></p>

<h1>Calificaciones</h1>

<table>
  <thead>
    <tr>
      <th>Descripcion</th>
      <th>Estatus</th>
      <th>Tipo calificacion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calificaciones.each do |calificacion| %>
      <tr>
        <td><%= calificacion.descripcion %></td>
        <td><%= calificacion.estatus %></td>
        <td><%= calificacion.tipo_calificacion %></td>
        <td><%= link_to 'Show', calificacion %></td>
        <td><%= link_to 'Edit', edit_calificacion_path(calificacion) %></td>
        <td><%= link_to 'Destroy', calificacion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

