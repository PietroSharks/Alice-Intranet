<%= csrf_meta_tag %>
<br>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h2 class="parametros-titulo"><%= "Reporte de calificaciones por criterios" %></h2>
            </div>
        </div>
        <div class="ibox-content" style="padding-bottom: 15px">
            <div class="container-fluid">
                <div class="col-sm-12" style="padding-top: 15px">
                    <div class="col-sm-12">Aqui los criterios de filtros seleccionado</div>
                </div>
                <div class="col-sm-12" style="padding-top: 15px">
                    <label style="margin-right: 10px">Total de calificaciónes realizadas:
                        <%= label_tag :id, @totalCalificaciones %></label>
                </div>
                <div class="col-sm-12" style="padding-top: 15px">
                    <label style="margin-right: 10px">Porcentaje de calificaciones respecto al global:
                        <%= label_tag :id, @totalSeleccionado %>
                        %</label>
                </div>
                <div class="col-sm-12">
                    <script src="https://code.highcharts.com/highcharts.js"></script>
                    <script src="https://code.highcharts.com/modules/exporting.js"></script>
                    <div id="container" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
                </div>
                <script>
                    Highcharts.chart('container', {
                        chart: {
                            type: 'column'
                        },
                        title: {
                            text: 'Promedio de calificaciones'
                        },
                        subtitle: {
                            text: ''
                        },
                        xAxis: {
                            categories: [
                                'Muy mal',
                                'Mal',
                                'Regular',
                                'Bueno',
                                'Muy bueno'
                            ],
                            crosshair: true
                        },
                        yAxis: {
                            min: 0,
                            title: {
                                text: 'Porcentaje'
                            }
                        },
                        tooltip: {
                            headerFormat: '<span style="font-size:10px">{point.key}</span><table>',
                            pointFormat: '<tr><td style="color:{series.color};padding:0">{series.name}: </td><td style="padding:0"><b>{point.y:.1f} %</b></td></tr>',
                            footerFormat: '</table>',
                            shared: true,
                            useHTML: true
                        },
                        plotOptions: {
                            column: {
                                pointPadding: 0.2,
                                borderWidth: 0
                            }
                        },
                        series: [
                            {
                                name: 'Todas las Especialidades',
                                data: [
                                    49.9,
                                    71.5,
                                    106.4,
                                    129.2,
                                    35.3
                                ]
                            }, {
                                name: '<%= @criterio.descripcion %>',
                                data: [
                                    83.6,
                                    78.8,
                                    98.5,
                                    93.4,
                                    40.6
                                ]
                            }, {
                                name: 'Todos los Criterios',
                                data: [
                                    48.9,
                                    38.8,
                                    39.3,
                                    41.4,
                                    60.5
                                ]
                            }
                        ]
                    });
                </script>


                <div class="col-sm-12" style="margin-top: 15px">
                    <table class="footable table table-stripped" data-sorting="true" data-filtering="true">
                        <thead>
                            <tr>
                                <th data-sorted="true">Descripción</th>
                                <th colspan="1"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @especialidades.each do |parametro| %>
                            <tr>
                                <td><%= link_to parametro.descripcion, edit_polymorphic_url(parametro) %></td>
                                <td></td>
                            </tr>
                            <% end %>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="5">
                                    <ul class="pagination pull-right"></ul>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.table').footable();
        });
    </script>
</div>
