<h1>Reporte estadistico</h1>
<p>Find me in app/views/grafico/ver.html.erb</p>
<div id="container" witdh="500px" height="300px"></div>

<script type="text/javascript">

	Highcharts.chart('container', {
	    chart: {
	        type: 'column'
	    },
	    title: {
	        text: '<%= @titulo %>'
	    },
	    xAxis: {
	        type: 'category',
	        labels: {
	            rotation: -45,
	            style: {
	                fontSize: '13px',
	                fontFamily: 'Verdana, sans-serif'
	            }
	        }
	    },
	    yAxis: {
	        min: 0,
	        title: {
	            text: 'Citas'
	        }
	    },
	    legend: {
	        enabled: false
	    },
	    tooltip: {
	        pointFormat: 'Citas: <b>{point.y:.1f}</b>'
	    },
	    series: [{
	        name: 'Citas',
	        data: [
	        <% @especialidades.each do |especialidad|%>
	            ['<%= especialidad[0] %>', <%= especialidad[1] %>],
	        <% end %>
	        ],
	        dataLabels: {
	            enabled: true,
	            rotation: -90,
	            color: '#FFFFFF',
	            align: 'right',
	            format: '{point.y:.1f}', // one decimal
	            y: 10, // 10 pixels down from the top
	            style: {
	                fontSize: '13px',
	                fontFamily: 'Verdana, sans-serif'
	            }
	        }
	    }]
	});
</script>