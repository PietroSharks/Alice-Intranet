<p id="notice"><%= notice %></p>

<div class="ibox-content">
<%= link_to 'Noticia', new_noticia_path, :class => "btn btn-primary btn-sm fa fa-plus" %>
 <br><br> 
 <table class="footable table table-stripped" data-sorting="true" data-filtering="true">
    <thead>
      <tr>
        <th data-breakpoints="xs" data-sorted="true">Tipo de noticia</th>
        <th>Titulo</th>
        <th>Descripcion</th>
        <th colspan="1"></th>
      </tr>
    </thead>
    <tbody>
        <% @noticias.each do |noticia| %>
          <tr>
            <td><%= noticia.tipo_noticia.descripcion %></td>
            <td><%= noticia.titulo %></td>
            <td><%= noticia.descripcion %></td>
            <td><%= link_to '', edit_polymorphic_url(noticia), :class => "btn btn-warning btn-sm fa fa-pencil" %></td>
            <td><%= link_to 'Show', noticia %></td>
            <td><%= link_to 'Edit', edit_noticia_path(noticia) %></td>
            <td><%= link_to 'Destroy', noticia, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
                    <tr>
                        <td colspan="5">
                            <ul class="pagination pull-right"></ul>
                        </td>
                    </tr>
                    </tfoot>
  </table>
</div>
<br>


<script type="text/javascript">
$(document).ready(function(){
$('.table').footable();
});


</script>


