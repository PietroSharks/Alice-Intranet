                      <div class="col-lg-10"><%= f.text_field :descripcion, :class => "form-control" %>
                       </div>
                    </div>
                     <div class="field form-group">
                    <label class="col-lg-2 control-label">Tipo Noticia</label>
                    <%= f.collection_select(:tipo_noticia_id, @tipoNoticias, :id, :descripcion) %>
                  </div>
                   <div class="form-group"><label class="col-lg-2 control-label">Estatus</label>

                      <div class="col-lg-10"><%= f.text_field :estatus, :class => "form-control" %>
                      </div>
                  </div>
                  <div class="form-group">
                      <div class="col-lg-offset-2 col-lg-10">
