<%= form_for(persona) do |f| %>


                  <div class="form-group"><label class="col-lg-2 control-label">Cedula</label>

                      <div class="col-lg-10"><%= f.text_field :cedula, :class => "form-control", :required => true %>
                       </div>
                    </div>
                   <div class="form-group"><label class="col-lg-2 control-label">Nombre</label>

                      <div class="col-lg-10"><%= f.text_field :nombre, :class => "form-control", :required => true %>
                      </div>
                  </div>
                  <div class="form-group"><label class="col-lg-2 control-label">Apellido</label>

                      <div class="col-lg-10"><%= f.text_field :apellido, :class => "form-control", :required => true %>
                      </div>
                  </div>
                   <div class="form-group"><label class="col-lg-2 control-label">Telefono</label>

                      <div class="col-lg-10"><%= f.text_field :telefono, :class => "form-control" %>
                      </div>
                  </div>
                   <div class="form-group"><label class="col-lg-2 control-label">Direccion</label>

                      <div class="col-lg-10"><%= f.text_field :direccion, :class => "form-control", :required => true %>
                      </div>
                  </div>
                   <div class="form-group"><label class="col-lg-2 control-label">Fecha de Nacimiento</label>

                      <div class="col-lg-10"><%= f.text_field :fecha_nacimiento, :class => "form-control", :required => true %>
                      </div>
                  </div>
                  <div class="field form-group">
                    <label class="col-lg-2 control-label">Sexo</label>







                   </div>
                  <div class="form-group">
                      <div class="col-lg-offset-2 col-lg-10">
                          <%= f.submit 'Guardar', :class => "btn btn-sm btn-white" %>
                      </div>
                  </div>
<% end %>
