<p id="notice"><%= notice %></p>

<h1>Habitos</h1>

<table>
  <thead>
    <tr>
      <th>Descripcion</th>
      <th>Estatus</th>
      <th>Tipohabito</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @habitos.each do |habito| %>
      <tr>
        <td><%= habito.descripcion %></td>
        <td><%= habito.estatus %></td>
        <td><%= habito.TipoHabito.descripcion %></td>
        <td><%= link_to 'Show', habito %></td>
        <td><%= link_to 'Edit', edit_habito_path(habito) %></td>
        <td><%= link_to 'Destroy', habito, method: :delete, data: { confirm: '¿Está seguro que desea eliminar este registro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

