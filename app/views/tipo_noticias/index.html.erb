
<h1>Tipo Noticias</h1>

<table>
  <thead>
    <tr>
      <th>Descripcion</th>
      <th>Estatus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_noticias.each do |tipo_noticia| %>
      <tr>
        <td><%= tipo_noticia.descripcion %></td>
        <td><%= tipo_noticia.estatus %></td>
        <td><%= link_to 'Show', tipo_noticia %></td>
        <td><%= link_to 'Edit', edit_tipo_noticia_path(tipo_noticia) %></td>
        <td><%= link_to 'Destroy', tipo_noticia, method: :delete, data: { confirm: '¿Está seguro que desea eliminar el tipo de noticia?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tipo Noticia', new_tipo_noticia_path %>
