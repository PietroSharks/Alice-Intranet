<div class="row">
  <div class="col-lg-10 col-lg-offset-1">
  <div class="ibox float-e-margins">
              <div class="ibox-title">
                  <h2 class="parametros-titulo"><%= "Orden de Restauracion de Base de Datos" %></h2>
              </div>
          </div>
    <div class="ibox-content">
      <%= form_tag "/restauracion", method: "post", :html => {:class => 'form-horizontal'} do |f| %>
          

          <div class="form-group">
            <label class="col-lg-5 control-label">Seleccione el respaldo a utilizar</label>

            <div class="col-lg-7"><%= select_tag('foos', @f) %>
            </div>
          </div>

          <br> <br>

          <table class="table">
              <tr>
                <th>Respaldo</th>
                <th>Fecha</th>
                <th>Numero de Respaldo</th>
              </tr>
              <tr>
                <td>Primero</td>
                <td><%= if $obj.nil? then "" else $obj.fecha_inicio.to_s end %></td>
                <td><%= if $obj.nil? then "" else $obj.id.to_s end %></td>
              </tr>
              <tr>
                <td>Segundo</td>
                <td><%= if $obj.nil? then "" else $obj2.fecha_inicio.to_s end %></td>
                <td><%= if $obj.nil? then "" else $obj2.id.to_s end %></td>
              </tr>
              <tr>
                <td>Tercero</td>
                <td><%= if $obj.nil? then "" else $obj3.fecha_inicio.to_s end %></td>
                <td><%= if $obj.nil? then "" else $obj3.id.to_s end %></td>
              </tr>
          </table>
           <br> <br>

          <div class="form-group row">
              <div class="col-lg-offset-3 col-lg-2">
                  <%= submit_tag 'Generar', :class => "btn btn-sm btn-primary"  %>
              </div>
              <div class="col-lg-2">
              <%= link_to 'Volver', '/chequear_cita', :class => "btn btn-sm btn-success", :title => "Atras" %>                          
              </div>
          </div>

          <% end %>
    </div>
  </div>
</div>