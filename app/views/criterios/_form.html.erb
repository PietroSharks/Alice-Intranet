<%= form_for(criterio) do |f| %>

  <div class="field">
    <%= f.label :descripcion %>
    <%= f.text_field :descripcion, :required => true %>
  </div>

  <div class="field">
    <%= f.label :estatus %>
    <%= f.number_field :estatus %>
  </div>

  <div class="field">
    <%= f.label :tipo_criterio_id %>
    <%= f.text_field :tipo_criterio_id %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
