<div class="row">   
   <div class="col-lg-6 col-lg-offset-3">
        <div class="ibox float-e-margins">
              <div class="ibox-title">
                  <h2 class="parametros-titulo"><%= @parametro.class.titulo %></h2>
              </div>
          </div>
          <div class="ibox-content">
             <%= form_for @parametro, :html => {:class => 'form-horizontal'} do |f| %>

                  <div class="field form-group">
                    <label class="col-lg-2 control-label">Tipo</label>

                     <div class="col-lg-10">
                      <%= f.collection_select(@referencia, @collection, :id, :descripcion, {:prompt => "Seleccione"}, {:class => "form-control"}) %>
                     </div>

                  </div>

                  <div class="form-group"><label class="col-lg-2 control-label">Descripción</label>

                      <div class="col-lg-10"><%= f.text_field :descripcion, :class => "form-control", :required => true %>
                       </div>
                    </div>

                  <div class="form-group">
                      <div class="col-lg-offset-3 col-lg-2">
                          <%= f.submit "Guardar", :class => "btn btn-sm btn-primary" %>
                      </div>
                      <% if (@parametro.new_record?) %>
                        <div class="col-lg-2">
                        <%= link_to 'Limpiar', '', type: :reset, :class => "btn btn-sm btn-warning" %>                          
                        </div>
                        <% end %>
                      <div class="col-lg-2">
                      <%= link_to 'Atrás', polymorphic_url(@parametro.class), :class => "btn btn-sm btn-success " %>
                      </div>
                  </div>
              <% end %>
          </div>
  </div>
</div>
