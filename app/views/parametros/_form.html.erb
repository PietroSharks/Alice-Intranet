<div class="row">   
   <div class="col-lg-6 col-lg-offset-3">
          <div class="ibox float-e-margins">
              <div class="ibox-title">
                  <h2 class="parametros-titulo"><%= @parametro.class.titulo %></h2>
              </div>
          </div>
          <div class="ibox-content">
             <%= form_for @parametro, :html => {:class => 'form-horizontal'} do |f| %>
                  <% if @parametro.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= pluralize(@parametro.errors.count, "error") %> prohibited this parametro from being saved:</h2>

                      <ul>
                      <% @parametro.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                      </ul>
                    </div>
                  <% end %>

                  <div class="form-group"><label class="col-lg-2 control-label">Descripcion</label>

                      <div class="col-lg-10"><%= f.text_field :descripcion, :class => "form-control" %>
                       </div>
                    </div>
                  <div class="form-group">
                      <div class="col-lg-offset-3 col-lg-2">
                          <%= button_tag( :class => "btn btn-primary", :title => "Guardar") do %>
                            <span class="fa fa-check"></span>
                          <% end %>
                      </div>
                      <% if (@parametro.new_record?) %>
                        <div class="col-lg-2">
                        <%= link_to '', '', type: :reset, :class => "btn btn-sm btn-warning fa fa-recycle", :title => "Limpiar"  %>                          
                        </div>
                      <% end %>
                      <div class="col-lg-2">
                      <%= link_to '', polymorphic_url(@parametro.class), :class => "btn btn-sm btn-success fa fa-undo", :title => "Atras" %>                          
                      </div>
                  </div>
              <% end %>
          </div>
  </div>
</div>
